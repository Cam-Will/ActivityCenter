<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Bangers&family=Coiny&family=Dela+Gothic+One&family=Hachi+Maru+Pop&family=Kalam:wght@700&family=Kumar+One&family=Londrina+Solid:wght@100&family=Luckiest+Guy&family=Marck+Script&family=Permanent+Marker&family=Sigmar+One&family=Squada+One&family=Yellowtail&display=swap" rel="stylesheet">
    <title>Activity Center - Login/Register</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body class="container">
    <div id="main">
        <div id="register">
            <h3 class="display-3">Register!</h3>
            <div id="form">
                @model User
                <form asp-action="Regis" asp-controller="Home" method="post">
                    <div class="form-group">
                        <label asp-for="FirstName"></label>
                        <input class="form-control" asp-for="FirstName">
                        <span asp-validation-for="FirstName" class="alert-danger"></span><br>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName"></label>
                        <input class="form-control" asp-for="LastName">
                        <span asp-validation-for="LastName" class="alert-danger"></span><br>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input class="form-control" asp-for="Email">
                        <span asp-validation-for="Email" class="alert-danger"></span><br>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input class="form-control" asp-for="Password">
                        <span asp-validation-for="Password" class="alert-danger"></span><br>
                    </div>
                    <div class="form-group">
                        <label asp-for="Confirm"></label>
                        <input class="form-control" asp-for="Confirm">
                        <span asp-validation-for="Confirm" class="alert-danger"></span><br>
                    </div>
                    <input class="btn btn-success" value="Sign Up Now" type="submit">
                </form>
            </div>
        </div>
        <div id="login">
            <h3 class="display-3">Login!</h3>
            <div id="form">
                <form asp-action="Logis" asp-controller="Home" method="post">
                    <div class="form-group">
                        <label asp-for="logEmail"></label>
                        <input class="form-control" asp-for="logEmail">
                        <span asp-validation-for="logEmail" class="alert-danger"></span><br>
                    </div>
                    <div class="form-group">
                        <label asp-for="logPassword"></label>
                        <input class="form-control" asp-for="logPassword">
                        <span asp-validation-for="logPassword" class="alert-danger"></span><br>
                    </div>
                    <input class="btn btn-success" value="Login Now" type="submit">
                </form>
            </div>
        </div>
    </div>
</body>
</html>
