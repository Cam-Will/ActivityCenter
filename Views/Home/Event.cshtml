<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Bangers&family=Coiny&family=Dela+Gothic+One&family=Hachi+Maru+Pop&family=Kalam:wght@700&family=Kumar+One&family=Londrina+Solid:wght@100&family=Luckiest+Guy&family=Marck+Script&family=Permanent+Marker&family=Sigmar+One&family=Squada+One&family=Yellowtail&display=swap" rel="stylesheet">
    <title>Activity Center - Event</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body class="container">
    <div id="header">
        <div id="title">
            <h2 class="display-2"> Williams Activty Center</h2>
        </div>
        <div id="links">
            <a href="/home">Home</a>
            <a href="/logout">Logout</a>
        </div>
    </div>
    <div id="main">
        <div id="events">
            <div id="title2">
                <h4 class="display-4">@ViewBag.Event.Name</h4>
                <div id="buttons">
                    @if (ViewBag.Event.Coordinator.UserId == ViewBag.Id)
                            {
                                <a class="btn btn-sm btn-danger" href="/delete/@ViewBag.Event.EventId/@ViewBag.Id">Delete Event</a>
                            }
                            else
                            {
                                foreach (var item in ViewBag.Event.Participators)
                                {
                                    if (item.UserId != ViewBag.Id)
                                    {
                                        <a class="btn btn-sm btn-warning" href="/join/@ViewBag.Event.EventId/@ViewBag.Id">Join Event</a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-sm btn-warning" href="/leave/@ViewBag.Event.EventId/@ViewBag.Id">Leave Event</a>
                                    }
                                }
                            }
                </div>
            </div>
            <div id="ec">
                <h6>Event Coordinator: </h6>
                <p>@ViewBag.Event.Coordinator.FirstName</p>
            </div>
            <div id="date">
                <h6>Description:</h6>
                <p>@ViewBag.Event.Description</p>
            </div>
            <div class="list-group">
            @foreach (var c in ViewBag.Event.Participators)
            {
                <a href="#" class="list-group-item list-group-item-action">@c.User.FirstName @c.User.LastName</a>
            }
        </div>
        </div>
    </div>
</body>
</html>
