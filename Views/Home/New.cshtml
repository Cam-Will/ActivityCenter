<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Bangers&family=Coiny&family=Dela+Gothic+One&family=Hachi+Maru+Pop&family=Kalam:wght@700&family=Kumar+One&family=Londrina+Solid:wght@100&family=Luckiest+Guy&family=Marck+Script&family=Permanent+Marker&family=Sigmar+One&family=Squada+One&family=Yellowtail&display=swap" rel="stylesheet">
    <title>Activity Center - New Event</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body class="container">
    <div id="header">
        <div id="title">
            <h2 class="display-2"> Williams Activty Center</h2>
        </div>
        <div id="links">
            <a href="/home">Home</a>
            <a href="/logout">Logout</a>
        </div>
    </div>
    <div id="main">
        <div id="register">
            <div id="title">
                <h4 class="display-4">Create an Activity</h4>
            </div>
            <div id="form">
                @model Event
                <form asp-action="newEvent" asp-controller="Home" method="post">
                    <input type="hidden" asp-for="UserId" value="@ViewBag.Id">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name">
                        <span asp-validation-for="Name" class="alert-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EventDate"></label>
                        <input asp-for="EventDate"><br>
                        <span asp-validation-for="EventDate" class="alert-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Duration"></label>
                        <input asp-for="Duration">
                        <select asp-for="Duration">
                            <option value="Minutes">Minutes</option>
                            <option value="Hours">Hours</option>
                            <option value="Days">Days</option>
                        </select>
                        <span asp-validation-for="Duration" class="alert-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description"><br>
                        <span asp-validation-for="Description" class="alert-danger"></span>
                    </div>
                    <input class="btn btn-success" value="Create Activity" type="submit">
                </form>
            </div>
        </div>
    </div>
</body>
</html>
